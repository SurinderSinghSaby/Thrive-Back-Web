<!DOCTYPE html>
<html>
<head>
    <title>Marketplace</title>
    <style>
        /* Add CSS styling for the listings */
        .listing {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px;
            display: inline-block;
            width: 30%;
        }
        .listing img {
            max-width: 100%;
            height: auto;
        }
        .listing h2 {
            font-size: 18px;
            margin: 5px 0;
        }
        .listing p {
            font-size: 14px;
        }
    </style>
</head>
<body>
    <h1>Marketplace</h1>
    <a href="/add-listing">Add New Listing</a>
    <div class="listings">
        <% items.forEach(item => { %>
            <div class="listing">
                <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
                <h2><%= item.title %></h2>
                <p>Price: $<%= item.price %></p>
                <p>Description: <%= item.description %></p>
                <!-- You can add more details here -->
            </div>
        <% }); %>
    </div>
</body>
</html>

