<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plants</title>
    <style>
        /* Some basic styling for cards */
        .card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 10px;
            margin: 15px;
            display: inline-block;
            width: 200px;
            transition: 0.3s;
        }

        .card:hover {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }

        .card img {
            max-width: 100%;
            border-radius: 8px 8px 0 0;
        }

        .card-content {
            padding: 10px;
        }
    </style>
</head>
<body>
    <h2>Plants List</h2>
    <% plants.forEach(plant => { %>
        <div class="card">
            <img src="<%= plant.imageUrl %>" alt="<%= plant.name %>">
            <div class="card-content">
                <h3><%= plant.name %></h3>
                <p><%= plant.description %></p>
                <a href="/plants/<%= plant.id %>">More Info</a>
            </div>
        </div>
    <% }); %>
</body>
</html>

